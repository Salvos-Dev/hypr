:root {
    --bg-color: #282828;
    --fg-color: #ebdbb2;
    --accent: #b16286;
    --font: "Iosevka Nerd Font";
    background-color: var(--bg-color);
    color: var(--fg-color);
    font-family: var(--font);
    font-size: 14px;
}

li {
    list-style: none;
    line-height: 1.5;
}

a {
    color: var(--fg-color);
    text-decoration: none;
}

a:hover {
    color: var(--accent);
}

.links {
    display: flex;
    justify-content: center;
    align-items: center;

    padding-top: 10px;
    min-height: 60vh;
}

.dev {
    background-color: var(--bg-color);
    width: 175px;
    height: 175px;
    padding: 5px 10px 10px 10px;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    margin-right: 20px;
    border: 2px solid var(--accent);
}

.media {
    background-color: var(--bg-color);
    width: 175px;
    height: 175px;
    padding: 5px 10px 10px 10px;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    margin-right: 20px;
    border: 2px solid var(--accent);
}

.personal {
    background-color: var(--bg-color);
    width: 175px;
    height: 175px;
    padding: 5px 10px 10px 10px;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    border: 2px solid var(--accent);
}

.search {
    background: transparent;

    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 0vh;
}

.search-bar {
    background: transparent;
}

.search-bar input {
    background-color: var(--bg-color);

    border-top: none;
    border-left: none;
    border-right: none;
    border-bottom: 2px solid var(--fg-color);

    text-align: center;
    font-size: 15px;

    width: 500px;
    min-height: 50px;
    padding: 5px;

    color: var(--fg-color);
}

.search-bar input:focus {
    border-top: none;
    border-left: none;
    border-right: none;
    border-bottom: 2px solid var(--accent);

    outline: none;
}

.searchbar input::placeholder {
    font: var(--font);
}
